{
    "name": "seydu/data-grid",
    "type": "library",
    "description": "Build Data Grid based on Prezent library",
    "keywords": [
        "seydu",
        "data-grid"
    ],
    "homepage": "https://github.com/seydu/data-grid",
    "license": "MIT",
    "authors": [
        {
            "name": "Saidou Gueye",
            "email": "saidou.gueye@gmail.com",
            "homepage": "https://github.com/seydu",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.1"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Seydu\\DataGrid\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Seydu\\DataGrid\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
